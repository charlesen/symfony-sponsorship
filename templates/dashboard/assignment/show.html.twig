{% extends 'base.html.twig' %}

{% block title %}Assignment{% endblock %}

{% block body %}
    <h1>Assignment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ assignment.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ assignment.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ assignment.description }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ assignment.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ExpiresAt</th>
                <td>{{ assignment.expiresAt ? assignment.expiresAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TargetUrl</th>
                <td>{{ assignment.targetUrl }}</td>
            </tr>
            <tr>
                <th>Points</th>
                <td>{{ assignment.points }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('dashboard_assignment_index') }}">back to list</a>

    <a href="{{ path('dashboard_assignment_edit', {'id': assignment.id}) }}">edit</a>

    {{ include('dashboard/assignment/_delete_form.html.twig') }}
{% endblock %}
