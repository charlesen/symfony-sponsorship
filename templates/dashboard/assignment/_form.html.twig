{{ form_start(form) }}
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control' ~ (form.title.vars.valid ? '' : ' is-invalid')}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.title) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {
                            'class': 'form-control' ~ (form.description.vars.valid ? '' : ' is-invalid'),
                            'rows': 5
                        }}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.description) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.type, 'Type d\'assignment', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.type, {
                                    'attr': {
                                        'class': 'form-select' ~ (form.type.vars.valid ? '' : ' is-invalid'),
                                        'data-controller': 'select2',
                                        'data-select2-theme-value': 'bootstrap-5'
                                    }
                                }) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.type) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.points, 'Points', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.points, {'attr': {
                                    'class': 'form-control' ~ (form.points.vars.valid ? '' : ' is-invalid'),
                                    'min': 0
                                }}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.points) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.targetUrl, 'URL cible', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.targetUrl, {'attr': {
                            'class': 'form-control' ~ (form.targetUrl.vars.valid ? '' : ' is-invalid'),
                            'placeholder': 'https://exemple.com'
                        }}) }}
                        <div class="form-text">L'URL vers laquelle les utilisateurs seront redirigés</div>
                        <div class="invalid-feedback">
                            {{ form_errors(form.targetUrl) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Paramètres</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            {{ form_widget(form.isActive, {
                                'attr': {
                                    'class': 'form-check-input',
                                    'role': 'switch'
                                }
                            }) }}
                            {{ form_label(form.isActive, 'Actif', {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                        <div class="form-text">Définir si cet assignment est actif et visible par les utilisateurs</div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.expiresAt, 'Date d\'expiration', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.expiresAt, {
                            'attr': {
                                'class': 'form-control' ~ (form.expiresAt.vars.valid ? '' : ' is-invalid'),
                                'data-controller': 'flatpickr',
                                'data-flatpickr-enable-time': 'true',
                                'data-flatpickr-date-format': 'd/m/Y H:i',
                                'data-flatpickr-locale': 'fr'
                            }
                        }) }}
                        <div class="form-text">Laisser vide pour ne pas expirer</div>
                        <div class="invalid-feedback">
                            {{ form_errors(form.expiresAt) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a href="{{ path('dashboard_assignment_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Annuler
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Enregistrer
        </button>
    </div>
{{ form_end(form) }}
