<form method="post" action="{{ path('dashboard_assignment_delete', {'id': assignment.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet assignment ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ assignment.id) }}">
    <button class="btn btn-outline-danger btn-sm">
        <i class="bi bi-trash"></i>
    </button>
</form>
