{% extends 'base.html.twig' %}

{% block title %}AssignmentType index{% endblock %}

{% block content %}
    <h1>AssignmentType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Icon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for assignment_type in assignment_types %}
            <tr>
                <td>{{ assignment_type.id }}</td>
                <td>{{ assignment_type.title }}</td>
                <td>{{ assignment_type.description }}</td>
                <td>{{ assignment_type.icon }}</td>
                <td>
                    <a href="{{ path('dashboard_assignment_type_show', {'id': assignment_type.id}) }}">show</a>
                    <a href="{{ path('dashboard_assignment_type_edit', {'id': assignment_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('dashboard_assignment_type_new') }}">Create new</a>
{% endblock %}
