{% extends 'dashboard/layout.html.twig' %}

{% block title %}{{ 'edit'|trans }} - {{ assignment_type.title }}{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">
            <i class="fas fa-edit me-2"></i>
            {{ 'assignment_type.actions.edit'|trans }}
        </h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('dashboard_assignment_type_index') }}" class="btn btn-sm btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> {{ 'assignment_type.actions.back_to_list'|trans }}
            </a>
            {{ include('dashboard/assignment_type/_delete_form.html.twig') }}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    {{ include('dashboard/assignment_type/_form.html.twig', {
                        'button_label': 'save'|trans,
                        'include_back': false
                    }) }}
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">{{ 'informations'|trans }}</h5>
                </div>
                <div class="card-body">
                    <dl class="mb-0">
                        <dt>{{ 'created_at'|trans }}</dt>
                        <dd>
                            {% if assignment_type.createdAt %}
                                {{ assignment_type.createdAt|date('d/m/Y H:i') }}
                            {% else %}
                                <span class="text-muted">{{ 'not_available'|trans }}</span>
                            {% endif %}
                        </dd>
                        <dt>{{ 'updated_at'|trans }}</dt>
                        <dd>
                            {% if assignment_type.updatedAt %}
                                {{ assignment_type.updatedAt|date('d/m/Y H:i') }}
                            {% else %}
                                <span class="text-muted">{{ 'not_available'|trans }}</span>
                            {% endif %}
                        </dd>
                        <dt>{{ 'usage_count'|trans }}</dt>
                        <dd>{{ assignment_type.assignments|length }}</dd>
                    </dl>
                </div>
            </div>
            
            {% if assignment_type.assignments|length > 0 %}
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    {{ 'warning_assignments_exist'|trans }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
