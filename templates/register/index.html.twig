

{% extends 'base.html.twig' %}

{% block title %}
{{ 'Register'|trans }}
{% endblock %}

{% block content %}
<div class="flex flex-col items-center justify-center px-4 py-8 min-h-screen">
    <div class="card w-full max-w-md bg-base-100 shadow-xl">
        <div class="card-body">
            <h1 class="card-title text-2xl mb-4">{{ 'Register'|trans }}</h1>
            {{ form_start(form, {'attr': {'class': 'flex flex-col gap-4 w-full'}}) }}
            <div class="form-control w-full">
                {{ form_label(form.email, null, {'label_attr': {'class': 'label-text mb-1'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'input input-bordered w-full'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="form-control w-full">
                {{ form_label(form.firstname, null, {'label_attr': {'class': 'label-text mb-1'}}) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'input input-bordered w-full'}}) }}
                {{ form_errors(form.firstname) }}
            </div>
            <button type="submit" class="btn btn-primary w-full mt-2">{{ 'Register'|trans }}</button>
            {{ form_end(form) }}
<div class="mt-4 text-center">
    <span class="text-sm">{{ "Déjà inscrit ?"|trans }}
        <a href="{{ path('login') }}" class="link link-primary">{{ 'Connectez-vous ici'|trans }}</a>
    </span>
</div>
        </div>
    </div>
</div>
{% endblock %}