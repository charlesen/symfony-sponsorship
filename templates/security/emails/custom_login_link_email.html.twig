{# Custom Magic Link Email Template #}
{% extends 'base_email.html.twig' %}

{% block subject %}{{ 'Login to your account'|trans }}{% endblock %}

{% block body_html %}
    <h2 style="margin-bottom: 20px;">{{ 'Login to your account'|trans }}</h2>
    <p>{{ 'Hello'|trans }},</p>
    <p>{{ 'To log in to your account, simply click the link below'|trans }} : </p>
    <p style="margin: 30px 0;">
      <a href="{{ loginLinkDetails.url }}" style="background: #2563eb; color: #fff; padding: 12px 32px; border-radius: 6px; text-decoration: none; font-weight: bold;">
        {{ 'Login now'|trans }}
      </a>
    </p>
    <p style="color: #666; font-size: 13px;">
      {{ 'This link is valid for'|trans }} {{ loginLinkDetails.expiresAt|date('H:i') }}.<br>
      {{ 'If you did not request this, you can ignore this email.'|trans }}
    </p>
{% endblock %}

