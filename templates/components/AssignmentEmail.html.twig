<div {{ attributes }}>
    <div class="space-y-6 max-w-3xl mx-auto p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-center text-gray-800 dark:text-gray-100">
            {{ 'AssignmentEmail.title'|trans }}
        </h2>
        <p class="text-center text-gray-600 dark:text-gray-300">
            {{ 'AssignmentEmail.description'|trans }}
        </p>
        <form data-model="contacts" class="space-y-6">
            <div class="space-y-4">
                {% for contact in contacts %}
                    <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg shadow-sm">
                        <div class="space-y-4">
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                <div class="form-control">
                                    <label for="firstName-{{ loop.index }}" class="block text-sm font-medium text-gray-700 dark:text-gray-200">
                                        {{ 'Pr√©nom' }}
                                    </label>
                                    <input
                                        type="text"
                                        id="firstName-{{ loop.index }}"
                                        name="firstName"
                                        value="{{ contact.firstName }}"
                                        class="mt-1 block w-full rounded-md border border-gray-300 bg-white text-gray-900 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm
                                               dark:border-gray-600 dark:bg-gray-800 dark:text-gray-100 dark:focus:ring-indigo-400 dark:focus:border-indigo-400"
                                        required
                                    >
                                </div>
                                <div class="form-control">
                                    <label for="email-{{ loop.index }}" class="block text-sm font-medium text-gray-700 dark:text-gray-200">
                                        {{ 'Adresse email' }}
                                    </label>
                                    <input
                                        type="email"
                                        id="email-{{ loop.index }}"
                                        name="email"
                                        value="{{ contact.email }}"
                                        class="mt-1 block w-full rounded-md border border-gray-300 bg-white text-gray-900 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm
                                               dark:border-gray-600 dark:bg-gray-800 dark:text-gray-100 dark:focus:ring-indigo-400 dark:focus:border-indigo-400"
                                        required
                                    >
                                </div>
                            </div>
                            <button
                                type="button"
                                data-action="live#action"
                                data-live-action-param="removeContact"
                                data-live-action-param-index="{{ loop.index }}"
                                class="mt-2 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white btn btn-neutral"
                            >
                                {{ 'Delete contact'|trans }}
                            </button>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="flex flex-col sm:flex-row justify-between gap-4 mt-6">
                <button
                    type="button"
                    data-action="live#action"
                    data-live-action-param="addContact"
                    class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
                >
                    {{ 'Add contact'|trans }}
                </button>
                <button
                    type="submit"
                    data-action="live#action"
                    data-live-action-param="sendInvitations"
                    class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                >
                    {{ 'Send invitations'|trans }}
                </button>
            </div>
        </form>
    </div>
</div>
