<div {{ attributes }}>
    <div class="space-y-6">
        <h2 class="text-2xl font-bold text-center">Envoyer des invitations</h2>
        <p class="text-center">
            Envoyez des invitations par e-mail à vos contacts pour augmenter vos chances de remporter un livre gratuit.
        </p>
        <form data-model="contacts">
            <div class="space-y-6">
                {% for contact in contacts %}
                    <div class="card">
                        <div class="space-y-4">
                            <div class="flex gap-4">
                                <div class="form-control">
                                    <label for="firstName-{{ loop.index }}" class="input">
                                        <span class="label">Prénom</span>
                                        <input type="text" class="input input-bordered" id="firstName-{{ loop.index }}" name="firstName" value="{{ contact.firstName }}">
                                    </label>
                                </div>
                                <div class="form-control">
                                    <label for="email-{{ loop.index }}" class="input">
                                        <span class="label">Adresse email</span>
                                        <input type="email" class="input input-bordered" id="email-{{ loop.index }}" name="email" value="{{ contact.email }}">
                                    </label>
                                </div>
                            <button type="button" data-action="live#action" data-live-action-param="removeContact" data-live-action-param-index="{{ loop.index }}" class="btn btn-error">
                                Supprimer
                            </button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="flex justify-between mt-6">            
                <button type="button" data-action="live#action" data-live-action-param="addContact" class="btn btn-success">
                    Ajouter un contact
                </button>
                <button type="submit" data-action="live#action" data-live-action-param="sendInvitations" class="btn btn-primary">
                    Envoyer les invitations
                </button>
            </div>
        </form>
    </div>
</div>
